{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "FunctionAppName": {
            "defaultValue": "o365def",
            "type": "string",
            "metadata": {
                "description": "Name prefix for the Function App (will be appended with unique string)"
            }
        },
        "OrganizationName": {
            "type": "string",
            "metadata": {
                "description": "Your Microsoft 365 organization name (e.g., contoso.onmicrosoft.com)"
            }
        },
        "UserAssignedIdentityResourceId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Optional: Resource ID of User-Assigned Managed Identity (e.g., /subscriptions/.../resourceGroups/.../providers/Microsoft.ManagedIdentity/userAssignedIdentities/myIdentity). Leave empty to use System-Assigned Identity only."
            }
        },
        "PackageUri": {
            "type": "string",
            "defaultValue": "https://github.com/super50nic/0365CustomConnector/raw/main/O365DefenderFunctionApp.zip",
            "metadata": {
                "description": "URL to the function app deployment package (zip file). Points to GitHub repository raw content."
            }
        }
    },
    "variables": {
        "functionAppName": "[concat(parameters('FunctionAppName'), uniqueString(resourceGroup().id))]",
        "hostingPlanName": "[variables('functionAppName')]",
        "applicationInsightsName": "[variables('functionAppName')]",
        "storageAccountName": "[variables('functionAppName')]",
        "identityType": "[if(empty(parameters('UserAssignedIdentityResourceId')), 'SystemAssigned', 'SystemAssigned, UserAssigned')]",
        "userAssignedIdentities": "[if(empty(parameters('UserAssignedIdentityResourceId')), json('{}'), json(concat('{\"', parameters('UserAssignedIdentityResourceId'), '\": {}}')))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-04-01",
            "name": "[variables('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "allowBlobPublicAccess": false,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2023-04-01",
            "name": "[variables('hostingPlanName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Y1",
                "size": "Y1",
                "family": "Y"
            },
            "kind": "windows",
            "properties": {
                "reserved": false
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[variables('applicationInsightsName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-link:', resourceId('Microsoft.Web/sites', variables('applicationInsightsName')))]": "Resource"
            },
            "properties": {
                "Application_Type": "web"
            },
            "kind": "web"
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2023-04-01",
            "name": "[variables('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "identity": {
                "type": "[variables('identityType')]",
                "userAssignedIdentities": "[variables('userAssignedIdentities')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
                "[resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))]"
            ],
            "properties": {
                "reserved": false,
                "httpsOnly": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('Microsoft.Insights/components', variables('functionAppName')), '2020-02-02').InstrumentationKey]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-04-01').keys[0].value)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "powershell"
                        },
                        {
                            "name": "ORGANIZATION_NAME",
                            "value": "[parameters('OrganizationName')]"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "[parameters('PackageUri')]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "functionAppName": {
            "type": "string",
            "value": "[variables('functionAppName')]"
        },
        "systemAssignedIdentityPrincipalId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', variables('functionAppName')), '2023-04-01', 'Full').identity.principalId]"
        },
        "functionAppUrl": {
            "type": "string",
            "value": "[concat('https://', variables('functionAppName'), '.azurewebsites.net')]"
        }
    }
}